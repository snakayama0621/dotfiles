{
  "env": {
    "MAX_THINKING_TOKENS": "10000"
  },
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Task",
      "TodoWrite",
      "Bash(git show:*)",
      "Bash(git log:*)",
      "Search",
      "Bash(cat :*)",
      "Bash(ls :*)",
      "Bash(head :*)",
      "Bash(tail :*)",
      "Bash(grep :*)",
      "Bash(find :*)",
      "Bash(ping :*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(sudo:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Bash(git config:*)",
      "Bash(chmod 777:*)",
      "Bash(rm -rf /*)",
      "Bash(gh repo delete:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notification.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notification.sh"
          }
        ]
      }
    ]
  }
}
