# ============================================================================
# Git 設定ファイル
# ============================================================================
# リンク先: ~/.gitconfig

# ----------------------------------------------------------------------------
# 基本設定
# ----------------------------------------------------------------------------

[init]
    defaultBranch = main       # 新規リポジトリのデフォルトブランチ名

[core]
    pager = delta              # deltaをページャーとして使用

# ----------------------------------------------------------------------------
# エイリアス
# ----------------------------------------------------------------------------

[alias]
    st = status
    co = checkout
    sw = switch
    br = branch
    ci = commit
    di = diff
    ds = diff --staged
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    unstage = reset HEAD --
    last = log -1 HEAD
    amend = commit --amend --no-edit

[interactive]
    diffFilter = delta --color-only

# ----------------------------------------------------------------------------
# Delta設定（diff/blame出力の美化）
# ----------------------------------------------------------------------------
# 公式ドキュメント: https://dandavison.github.io/delta/

[delta]
    navigate = true            # n/N で差分間を移動
    side-by-side = true        # 左右分割表示
    line-numbers = true        # 行番号表示
    syntax-theme = Dracula     # シンタックステーマ

# ----------------------------------------------------------------------------
# マージ・差分設定
# ----------------------------------------------------------------------------

[merge]
    conflictstyle = diff3      # コンフリクト表示に共通祖先を含める

[diff]
    colorMoved = default       # 移動した行を色分け表示
